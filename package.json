{
  "name": "passportmern",
  "version": "1.0.0",
  "description": "Passport yarn package for log in system for a full stack M.E.R.N applicaion",
  "main": "server.js",
  "scripts": {
    "debugger": "concurrently \"node --inspect-brk server.js --ignore 'client/*'\" \"yarn run client\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && yarn run start:prod || yarn run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"yarn run client\"",
    "client": "cd client && yarn run start",
    "install": "cd client && yarn install",
    "build": "cd client && yarn run build",
    "heroku-postbuild": "yarn run build"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.3",
    "standard": "^14.3.1"
  },
  "repository": "git+https://github.com/Vincent440/passport-mern-sql",
  "author": "Vincent Shury",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "express-mysql-session": "^2.1.4",
    "express-session": "^1.17.0",
    "if-env": "^1.0.4",
    "mysql2": "^2.1.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0"
  }
}
